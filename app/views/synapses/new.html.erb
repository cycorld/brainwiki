<%=form_tag '/synapses' do %>
<div class="input-field col s12">
  <select name="prev" class="browser-default">
    <% unless @prev.nil? %>
      <option value="<%=@prev.id%>"><%=@prev.title%></option>
      <option disabled>──────────</option>
    <% end %>
    <% @nuerons.each do |n| %>
      <option value="<%=n.id%>"><%=n.title%></option>
    <% end %>
  </select>
</div>
<select name="next" class="browser-default">
  <% unless @next.nil? %>
    <option value="<%=@next.id%>"><%=@next.title%></option>
    <option disabled>──────────</option>
  <% end %>
  <% @nuerons.each do |n| %>
    <option value="<%=n.id%>"><%=n.title%></option>
  <% end %>
</select>
<%=submit_tag%>
<% end %>
<% @show = @next || @prev %>
<% unless @show.nil? %>
  <a href="/show/<%=@show.token%>"><%=@show.title%> - 바로 가기</a>
<% else %>
  <button onclick="window.history.back()">뒤로 가기</button>
<% end %>

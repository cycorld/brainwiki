<!DOCTYPE html>
<html>
<head>
  <title>Plurry</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="app-bar">
  <a class="app-bar-element" href="/">Plurry</a>
  <span class="app-bar-divider"></span>
  <ul class="app-bar-menu">
    <li><a href="/">All Nuerons</a></li>
    <li>
      <a href="#" class="dropdown-toggle">Nuerons</a>
      <ul class="d-menu" data-role="dropdown">
        <li><a href="/nuerons">Nuerons list</a></li>
        <li><a href="/nuerons/new">Add nueron</a></li>
      </ul>
    </li>
    <% if user_signed_in? %>
      <li>
        <a href="" class="dropdown-toggle"><%=current_user.email%></a>
        <ul class="d-menu" data-role="dropdown">
          <li><%= link_to 'mypage', '/' %></li>
          <li><%= link_to 'sign out', destroy_user_session_path, method: 'delete' %></li>
        </ul>
      </li>
    <% else %>
      <li><%= link_to 'sign in', new_user_session_path %></li>
      <li><%= link_to 'sign up', new_user_registration_path %></li>
    <% end %>
  </ul>
</div>

<%= yield %>

</body>
</html>

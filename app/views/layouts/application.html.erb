<!DOCTYPE html>
<html>
<head>
  <title><%= t('.title')%></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul id="nuerons-nav" class="dropdown-content">
  <li><a href="/nuerons"><%=t('.all_list')%></a></li>
  <li><a href="/nuerons/new"><%=t('.create_new_nueron')%></a></li>
  <li><a href="/synapses/new"><%=t('.link_nuerons')%></a></li>
</ul>
<nav class="light-blue lighten-1" role="navigation">
  <div class="nav-wrapper container">
    <a id="logo-container" href="/" class="brand-logo">
      <%=t '.title'%>
      <%=image_tag('plurry.svg', height: 40, style: 'padding-top:10px')%>
    </a>
    <ul class="right hide-on-med-and-down">
      <li><a href="/"><%=t('.view_cloud')%></a></li>
      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="nuerons-nav"><%=t('.nueron_jobs')%><i class="material-icons right">arrow_drop_down</i></a></li>
      <% if user_signed_in? %>
        <li><%= link_to current_user.email, '/' %></li>
        <li><%= link_to t('.sign_out'), destroy_user_session_path, method: 'delete' %></li>
      <% else %>
        <li><%= link_to t('.sign_in'), new_user_session_path %></li>
        <li><%= link_to t('.sign_up'), new_user_registration_path %></li>
      <% end %>
    </ul>

    <ul id="nav-mobile" class="side-nav">
      <li><a href="/"><%=t('.home')%></a></li>
      <li><a href="/nuerons"><%=t('.all_list')%></a></li>
      <li><a href="/nuerons/new"><%=t('.create_new_nueron')%></a></li>
      <li><a href="/synapses/new"><%=t('.link_nuerons')%></a></li>
      <% if user_signed_in? %>
        <li><%= link_to current_user.email, '/' %></li>
        <li><%= link_to t('.sign_out'), destroy_user_session_path, method: 'delete' %></li>
      <% else %>
        <li><%= link_to t('.sign_in'), new_user_session_path %></li>
        <li><%= link_to t('.sign_up'), new_user_registration_path %></li>
      <% end %>
    </ul>
    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
  </div>
</nav>
<p id="notice"><%= notice %></p>
<%=flash[:notice]%>
<%=flash[:alert]%>

<div class="container">
  <%= yield %>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a href="/nuerons/new" class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><a href="/synapses/new" class="btn-floating yellow darken-1"><i class="mdi-communication-call-split">mdi-content-link</i></a></li>
  </ul>
</div>

<footer class="page-footer">
  <div class="container">
    <div class="row">
      <div class="col l2 s12">
        <%=image_tag('plurry.svg', width: 150)%>
      </div>
      <div class="col l4 s12">
        <h5 class="white-text"><%=t('.title')%></h5>
        <p class="grey-text text-lighten-4"><%=t('.moto')%></p>
      </div>
      <div class="col l2 offset-l2 s12">
        <h5 class="white-text"><%=t('.menu')%></h5>
        <ul>
          <li><a class="grey-text text-lighten-3" href="#!"><%=t('.about')%></a></li>
          <li><a class="grey-text text-lighten-3" href="/nuerons/new"><%=t('.create_new_nueron')%></a></li>
          <li><a class="grey-text text-lighten-3" href="/synapses/new"><%=t('.link_nuerons')%></a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
      Cycorld, 2016
      <!--
      <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
      -->
    </div>
  </div>
</footer>

</body>
</html>

<ul class="collapsible popout" data-collapsible="accordion">
  <% @quizzes.each do |q| %>
  <li>
  <!--<div class="collapsible-header"><%#= q.question%>  |  <%#= q.user.email %></div> -->
    <div class="collapsible-header">
      <table>
        <tr>
          <th> Question </th>
          <th> Maker </th>
        </tr>
        <tr>
          <td><%= q.question %> </td>
          <td><%= q.user.email %></td>
        </tr>
      </table>
    </div>
    <div class="collapsible-body" style="padding:1em;">
      <%= form_tag(nueron_check_path(@nueron, q), method: "get") do %>
        <%= q.question %>
        <% q.answers[:array].shuffle.each do |a|%>
          <input class="with-gap" name="answer" type="radio" value=<%=a %> style="left:0; position:relative; opacity:1;"/>
          <label for="test1"><%= a %></label>
        <% end %>
        <input type="submit">
      <% end %>
    </div>
  </li>
  <% end %>
</ul>

<% if current_user.id == @nueron.user_id %>
  <%= link_to '퀴즈 만들러 가기', new_nueron_quiz_path(@nueron), class: "waves-effect waves-light btn-large" %>
<%end %>

  <%= link_to '퀴즈 목록 보기', nueron_quizzes_path(@nueron), class: "waves-effect waves-light btn-large" %>
<div class="fb-comments" data-href="<%=show_url(@nueron.token)%>" data-numposts="10" data-width="100%"></div>

